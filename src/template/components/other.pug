//- download link
mixin downloadLink(links)
  each link in links
    if link.date === undefined
      .download
        a(href=`${link.href}` class="download__link" targer="_blank")
          i.download__link-icon.fill_blue-light-to-black.fill_contrast_blue-light-to-black
            +svg('document')
          .download__link-desc.regular.font_blue-light-to-black.font_contrast_blue-light-to-black= link.desc
    else
      .download
        a(href=`${link.href}` class="download__link" targer="_blank")
          i.download__link-icon.fill_blue-light-to-black.fill_contrast_blue-light-to-black
            +svg('document')
          .download__link-desc.regular.font_blue-light-to-black.font_contrast_blue-light-to-black= link.desc
        .download__date.regular-small.font_gray-to-black= link.date

//- disabilities button block
mixin disabilities()
  .disabilities__wrapper
    .disabilities
      .disabilities__item-wrapper
        a(href="#" class="disabilities__item disabilities__item-text bg_white-noise-to-black bg_white-noise-to-dark-blue")
          i.disabilities__item-icon.fill_black-to-white.fill_contrast_black-to-white
            +svg('text')
        span.disabilities__desc.disabilities__desc-text.disabilities__desc-disabled.font_upper.h5.font_black.bg_white-noise Збільшити шрифт
      .disabilities__item-wrapper
        a(href="#" class="disabilities__item disabilities__item-contrast bg_white-noise-to-black bg_white-noise-to-dark-blue")
          i.disabilities__item-icon.fill_black-to-white.fill_contrast_black-to-white
            +svg('drop')
        span.disabilities__desc.disabilities__desc-contrast.disabilities__desc-disabled.font_upper.h5.font_black.bg_white-noise Змiнити на синiй
      .disabilities__item-wrapper
        a(href="#" class="disabilities__item disabilities__item-black bg_white-noise-to-black bg_white-noise-to-dark-blue")
          i.disabilities__item-icon.fill_black-to-white.fill_contrast_black-to-white
            +svg('contrast')
        span.disabilities__desc.disabilities__desc-black.disabilities__desc-disabled.font_upper.h5.font_black.bg_white-noise Змiнити на чорно-бiлий

//- online form block
mixin onlineFormItem(title, desc)
  if (!title)
    section.online-form
      .online-form__content-wrapper
        p(class="online-form__text regular font_gray-dark-to-black")= desc
      .online-form__stripe-wrapper
        span.online-form__stripe.bg_blue-to-black
        span.online-form__stripe.bg_yellow-to-gray.bg_contrast_yellow-to-white
  else
    section.online-form
      .online-form__content-wrapper
        h5.online-form__heading
          a(href="#" class="h4 font_black online-form__heading-link")= title
            span.online-form__heading-stripe.bg_black
        p(class="online-form__text regular font_gray-dark-to-black")= desc
      .online-form__stripe-wrapper
        span.online-form__stripe.bg_blue-to-black
        span.online-form__stripe.bg_yellow-to-gray.bg_contrast_yellow-to-white

//- navigation
mixin navigation(items)
  nav.nav.bg_white-noise-to-dark-blue
    each item in items
      if item.active
        a.nav__item.nav__item-active.regular.font_upper.font_gray-dark-to-black(href='#')= item.text
      else
        a.nav__item.regular.font_upper.font_gray-dark-to-black(href='#')= item.text


//- links
mixin links(...links)
  each item in links
    if item.href
      li.links__item
        a(href=`${item.href}` class="h6 links__link font_gray-light-to-black font_upper")= item.text
    else
      li.links__item
        a(href="#" class="h6 links__link font_gray-light-to-black font_upper")= item.text
