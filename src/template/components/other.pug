//- blocks separate border
mixin separateBorder(className)
  if className
    div(class=`container border-wrapper ${className}`)
      .border
  else
    div(class="container border-wrapper")
      .border


//- main banner item
mixin bannerMain(item)
  .banner
    .banner__open-wrap
      .container
        a(href='#' class="banner__open")
          .banner__open-text.h5.font_upper.font_blue-light-to-black.font_contrast_blue-light-to-black Розгорнути
          i.banner__arrow.fill_blue-light-to-black.fill_contrast_blue-light-to-black
            +svg('arrow_small')
    a(href="#" class="banner__link")
      .banner__cnt
        div(class="banner__img" style="background-image:url('" + item.image + "')")
        .container
          h2.banner__title.font_white.font_upper= item.title
          .banner__desc.font_white.font_upper= item.desc
          a(href='#' class="banner__close")
            i.banner__svg.fill_white
                +svg('close')

//- banner item
mixin bannerSecondary(item, breadcrumbsArray, breadcrumbsActiveItem, breadcrumbsClass)
  .banner-secondary
    .banner-secondary__cnt
      div(class="banner-secondary__img" style="background-image:url('" + item.image + "')")
      .container
        .banner-secondary__desc-scroll
          .banner-secondary__desc-wrapper
            +breadrcrumbs(breadcrumbsArray, breadcrumbsActiveItem, breadcrumbsClass)
            h2.banner-secondary__title.font_white.font_upper= item.title
            p.banner-secondary__desc.regular.font_white= item.desc

//- banner item
mixin banner(item)
  .banner-btn
    .banner-btn__cnt
      div(class="banner-btn__img" style="background-image:url('" + item.image + "')")
      .banner-btn__desc-wrapper
        h2.banner-btn__title.font_white.font_upper= item.title
        p.banner-btn__desc.regular.font_white= item.desc
        .banner-btn__button-wrapper
          a(href="#" class="banner-btn__button h5 font_upper font_black-to-white bg_white-to-black")= item.button

//- interactive search
mixin search()
  .search
    .container
      .search__text.font_contrast_white-noise-to-black.font_upper Пошук
      form(class="search__form" action="" method="")
        input(class="search__form-input font_gray-to-black regular bg_white-noise-to-dark-blue" type="text" placeholder="Шукайте, наприклад, новини для студентів")
        +button("search-yellow-input")


//- dropdown item
mixin dropdown(title, items, className)
  .dropdown
    .dropdown__title
      if className
        div(class=`dropdown__title-text h5 font_upper font_gray-dark-to-black js-dropdown-open ${className}`)= title
      else
        .dropdown__title-text.h5.font_upper.font_gray-dark-to-black.js-dropdown-open= title
      i.dropdown__arrow.fill_gray-to-black
        +svg('arrow_small')
    ul.dropdown__list
      each item in items
        li(class=`dropdown__item ${className}`)
          a(class='dropdown__link h5 font_upper font_gray-dark-to-black' href='#')= item

