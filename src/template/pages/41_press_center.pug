                input.form-input.press__subscribe-form-input.regular.font_gray-to-black.bg_white-to-light-blue(type="text" placeholder="Введіть Ваш Email")
              button.btn.press__subscribe-form-btn.bg_yellow-to-black.bg_contrast_yellow-to-white.h5.font_black-to-white.font_upper(type="submit" data-popup-target="press__subscribe")
                span.press__subscribe-form-btn-text Підписатись
                i.press__subscribe-form-btn-svg.fill_white
                  +svg("email")
            
